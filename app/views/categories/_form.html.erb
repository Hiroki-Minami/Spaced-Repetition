<%= form_with(model: @category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group mb-2">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class:"form-control", placeholder:"Name" %>
  </div>

  <div class="field form-group mb-2">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class:"form-control", placeholder:"Description", rows:"5" %>
  </div>

  <div class="field form-group mb-3">
    <%= form.check_box :is_public, class:"form-check-input", type:"checkbox"%>
    <%= form.label :is_public, "Public", class:'ms-1' %>
  </div>

  <div class="d-flex">
    <div class="mb-4 me-2">
    <%= link_to "Back to Home", root_path, class:'btn btn-secondary' %>
    </div>
    <div class="mb-4 me-2">
      <%= form.submit class:'btn btn-primary' %>
    </div>
    <div class="mb-4">
      <% if @category.new_record? %>
        <%= form.submit 'Create and Set Cards', class:'btn btn-primary' %>
      <% else %>
        <%= link_to "Set Cards", category_cards_path(@category), class:'btn btn-primary' %>
        <%# <%= form.submit @category.new_record? ? 'Create and Add Cards': 'Update and Add Cards', class:'btn btn-primary' %>
      <% end %>
    </div>
  </div>
<% end %>
