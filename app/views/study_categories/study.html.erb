<div class="d-flex justify-content-between align-items-center mt-4">
  <%= link_to "Back to Home", root_path, class:'btn btn-primary' %>
  <h2><%= @study_category.name %></h2>
  <%= link_to "Back to Home", root_path, class:'btn btn-primary' %>
  <%# display card list related to this category  %>
  <%# <%= link_to "Card list", study_categories_path, class:'btn btn-primary' %>
</div>
<div style="height: 300px" class="d-flex justify-content-center my-5">
  <div class="card w-50 mx-auto">
    <div class="card-body d-flex justify-content-center align-items-center">
      <%# hold a value whether instruction is supposed to be shown or answer and description  %>
      <% if true %>
        <p class="card-title"><%= @study_cards[0].instruction %></p>
      <% else %>
        <p class="card-title mb-6"><%= @study_cards[0].answer %></p>
        <p class="card-text"><%= @study_cards[0].description %></p>
      <% end %>
    </div>
  </div>
</div>
<div class="d-flex justify-content-center gap-4" data-controller="study_category">
  <%# requests are supposed to be sent asynchronously but update the index to show next card %>
  <button data-action="click->study_category#study_submit" class="btn btn-primary">Not Confident</button>
  <%= button_to "Not Confident", root_path, class:'btn btn-primary' %>
  <%= button_to "Confident", root_path, class:'btn btn-primary' %>
  <%= button_to "Done", root_path, class:'btn btn-danger' %>
</div>