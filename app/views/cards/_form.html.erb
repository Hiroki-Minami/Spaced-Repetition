<%= form_with model: [@category, @card] do |form| %>
  <% if card.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
        <% card.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group mb-2">
    <%= form.label :answer, style: "display: block" %>
    <%= form.text_field :answer, class:"form-control", placeholder:"Answer" %>
  </div>

  <div class="field form-group mb-2">
    <%= form.label :instruction, style: "display: block" %>
    <%= form.text_area :instruction, class:"form-control", placeholder:"Instruction", rows:"5" %>
  </div>

  <div class="field form-group mb-2">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class:"form-control", placeholder:"Description", rows:"5" %>
  </div>

  <div class="d-flex">
    <div class="mb-4 me-2">
    <%= link_to "Card List", category_cards_path(@category), class:'btn btn-secondary' %>
    </div>
    <div class="mb-4 me-2">
      <%= form.submit class:'btn btn-primary' %>
    </div>
  </div>
<% end %>
