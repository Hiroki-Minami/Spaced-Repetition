<div class="container mt-4">
  <div class="d-flex justify-content-end mb-4">
    <%= link_to "Add Card", new_category_card_path(id: @category.id), class:'btn btn-primary' %>
  </div>
  <table class="table table-striped table-bordered table-hover mb-2">
    <thead>
      <tr>
        <th>Answer</th>
        <th>Instruction</th>
        <th>Description</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cards.each do |card| %>
        <tr style="height: fit-content">
          <td style="max-width: 100px; overflow-wrap: break-word; word-wrap: break-word; hyphens: auto; height: fit-content"><%= label_tag "cards[#{card.id}][answer]", card.answer, style: "display: block" %></td>
          <td style="max-width: 200px; overflow-wrap: break-word; word-wrap: break-word; hyphens: auto; height: fit-content"><%= label_tag "cards[#{card.id}][instruction]", card.instruction, style: "display: block" %></td>
          <td style="max-width: 200px; overflow-wrap: break-word; word-wrap: break-word; hyphens: auto; height: fit-content"><%= label_tag "cards[#{card.id}][description]", card.description, style: "display: block" %></td>
          <td class="d-flex gap-2" style="height: fit-content">
            <%= link_to "Edit", edit_category_card_path(@category, card), class:'btn btn-primary' %>
            <%= button_to "Delete", [@category, card], method: :delete, data: { turbo_confirm: "Are you sure?" }, class:'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>